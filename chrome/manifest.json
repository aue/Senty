{
  "manifest_version": 2,
  "name": "Senty",
  "description": "Instant, offline sentiment analysis for what you type.",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["assets/bundle.js"]
    }
  ],
  "permissions": [
    "activeTab"
  ],
  "web_accessible_resources": [
    "assets/style.css"
  ],
  "icons": {
    "256": "icon.png" 
  }
}
